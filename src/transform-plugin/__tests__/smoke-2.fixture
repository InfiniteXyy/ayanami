export const SolutionTab: FC<{}> = memo(() => {
  const [state, actions] = useAyanami(QuestionDetailModule)

  useEffect(() => {
    state.questionSlug && actions.getSolutionCount()
  }, [state.questionSlug])

  const title = '题解' + (state.solutionCount ? `(${state.solutionCount})` : '')
  const Title = simpleTitle(title, '题解')

  return (
    <>
      <Icon type="bottle" />
      <Title />
    </>
  )
})
